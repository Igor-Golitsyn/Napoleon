<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height_72"
        android:paddingLeft="@dimen/padding_4"
        android:paddingTop="@dimen/padding_4"
        android:paddingBottom="@dimen/padding_4"
        android:paddingRight="@dimen/padding_small_16">

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="@dimen/card_image_width_96"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_image"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/padding_small_16"
            />

        <TextView
            android:id="@+id/card_middle_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_image"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/padding_small_16"
            android:maxLines="1" />

        <TextView
            android:id="@+id/card_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card_image"
            android:layout_alignBottom="@id/card_image"
            android:layout_marginLeft="@dimen/padding_small_16"
            android:paddingLeft="@dimen/padding_4"
            android:paddingRight="@dimen/padding_4"
            />

        <TextView
            android:id="@+id/card_price_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/card_image"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/padding_normal_32"
            />
        <TextView
            android:id="@+id/card_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/card_price_seller"
            android:layout_alignBottom="@id/card_image"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_image"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_shopping_cart_24dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>

